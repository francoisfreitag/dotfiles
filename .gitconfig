[user]
    name = Fran√ßois Freitag
    email = mail@franek.fr

[color]
    ui = auto

[alias]
    st = status
    ci = commit
    br = branch
    cp = cherry-pick
    df = diff
    dc = diff --cached
    lg = log -p
    pr = pull --rebase
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    latest = for-each-ref --sort=-taggerdate --format='%(refname:short)' --count=1
    rb = rebase
    rev = !sh -c \"git log -p ${1:-master}..HEAD --reverse\"
    rt = restore
    sw = switch
    ctags = !.git/hooks/ctags

[commit]
    message = ~/.git_templates/commit_message.txt
    template = ~/.git_templates/commit_message.txt

[core]
    excludesfile = ~/.gitignore_global

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[init]
    templatedir = ~/.git_templates

[credential]
    helper = /usr/lib/git-core/git-credential-gnome-keyring

[push]
    default = current

[stash]
    showPatch = true

[rebase]
    autoSquash = true
